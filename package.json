{
    "name": "h-ui",
    "version": "1.0.1",
    "description": "",
    "main": "index.js",
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.com"
    },
    "scripts": {
        "test": "cd packages/h-ui-vite && vitest",
        "test:run": "cd packages/h-ui-vite && vitest run",
        "dev": "cd packages/h-ui-vite && vite serve --port 3000",
        "ui:build": "cd packages/h-ui-vite && pnpm run build",
        "theme:build": "cd packages/h-ui-theme-chalk && pnpm run build",
        "build": "pnpm run ui:build && pnpm run theme:build",
        "docs:dev": "cd packages/docs-vite && pnpm run dev",
        "docs:build": "cd packages/docs-vite && pnpm run build",
        "docs:serve": "cd packages/docs-vite && pnpm run serve",
        "pg:dev": "pnpm run build && cd packages/h-ui-playground && pnpm dev",
        "pg:build": "pnpm run build && cd packages/h-ui-playground && pnpm build",
        "pg:serve": "pnpm run build && cd packages/h-ui-playground && pnpm preview",
        "lint": "cd packages/h-ui-vite && pnpm lint",
        "format": "cd packages/h-ui-vite && pnpm format",
        "prepare": "husky install",
        "preinstall": "node ./scripts/preinstall.js"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@iconify-json/ic": "^1.1.12",
        "@types/fs-extra": "^11.0.1",
        "@types/lodash": "^4.14.191",
        "@typescript-eslint/eslint-plugin": "^5.49.0",
        "@typescript-eslint/parser": "^5.49.0",
        "@vitejs/plugin-legacy": "^3.0.2",
        "@vitejs/plugin-vue": "^4.0.0",
        "@vitejs/plugin-vue-jsx": "^3.0.0",
        "@vue/eslint-config-prettier": "^7.0.0",
        "@vue/test-utils": "^2.2.8",
        "babel-eslint": "^10.1.0",
        "eslint": "^8.33.0",
        "eslint-formatter-pretty": "^4.1.0",
        "eslint-plugin-json": "^3.1.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-vue": "^9.9.0",
        "esno": "^0.16.3",
        "fs-extra": "^11.1.0",
        "happy-dom": "^8.2.2",
        "husky": "^8.0.3",
        "lint-staged": "^13.1.0",
        "prettier": "^2.8.3",
        "typescript": "^4.9.4",
        "unocss": "^0.49.4",
        "vite": "^4.1.1",
        "vite-plugin-dts": "^1.7.3",
        "vitepress": "1.0.0-alpha.47",
        "vitepress-theme-demoblock": "^2.0.2",
        "vitest": "^0.28.3"
    },
    "dependencies": {
        "@commitlint/cli": "17.0.2",
        "@commitlint/config-conventional": "17.0.2",
        "@my-h-ui/constants": "workspace:*",
        "@my-h-ui/directives": "workspace:^0.0.5",
        "@my-h-ui/h-ui": "workspace:^1.0.9",
        "@my-h-ui/mixins": "workspace:*",
        "@my-h-ui/theme-chalk": "workspace:^1.0.0",
        "@my-h-ui/tokens": "workspace:^0.0.5",
        "@my-h-ui/utils": "workspace:*",
        "@vitejs/plugin-vue2": "^2.2.0",
        "lodash": "^4.17.21",
        "sass": "^1.58.1",
        "vue": "^3.2.44"
    },
    "lint-staged": {
        "src/**/*": "npm run lint"
    }
